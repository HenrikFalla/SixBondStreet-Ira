{% assign vendorHandle = product_data.vendor | handleize %}
<section class="description merke">
    <div class="description__container merke_container">
        {% for article in blog_data.articles %}
        {% assign handle-check = blog_data.title | downcase | append: "/" | append: vendorHandle %}
        {% if handle-check == article.handle %}
            <div class="blog-block__image" style="background: url({{ article.image | img_url: '1200x1200' }}) no-repeat; background-size: cover;    background-position: center;"></div>
            <div class="blog-block__text">
                <h2 class="block-title">{{ article.title }}</h1>
                {{ article.content }}
            </div>
        {% endif %}
    {% endfor %}
    </div>
</section>