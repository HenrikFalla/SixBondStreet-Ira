{%- liquid 
    assign block_type = section.settings.recommendation_type
-%}
<section
  class="featured-collection s-inline-section"
  data-section-id="{{ section.id }}"
>
    {% case block_type %}
        {% when 'complimentary' %}
            <span class="clerk"
                data-template="@home-page-visitor-complementary">
            </span>
        {% when 'bestseller' %}
            <span class="clerk"
                data-template="@home-page-popular">
            </span>
        {% when 'hot' %}
            <span class="clerk"
                data-template="@home-page-trending">
            </span>
    {% endcase%}
</section>
{% schema %}
{
    "name": "Clerk Home",
    "settings": [
        {
            "id": "recommendation_type",
            "type": "radio",
            "label": "Recommendation Type",
            "options": [
                { "label": "Visitor Complimentary", "value": "complimentary" },
                { "label": "Best Sellers", "value": "bestseller" },
                { "label": "Hot Products", "value": "hot"}
            ], 
           "default": "bestseller"
        }
    ],
    "presets": [
        {
            "name":"Clerk Home",
            "settings": {
                "recommendation_type": "bestseller"
            }
        }
    ]
}
{% endschema %}