{%- liquid 
    assign block_type = settings.recommendation_type
-%}
{% case block_type %}
    {% when 'complimentary' %}
        <span class="clerk"
            data-template="@home-page-visitor-complementary">
        </span>
    {% when 'bestseller' %}
        <span class="clerk"
            data-template="@home-page-popular">
        </span>
    {% when 'hot' %}
        <span class="clerk"
            data-template="@home-page-trending">
        </span>
{% endcase%}

{% schema %}
{
    "name": "Clerk Home",
    "settings": [
        {
            "id": "recommendation_type",
            "type": "radio",
            "label": "Recommendation Type",
            "options": [
                { "label": "Visitor Complimentary", "value": "complimentary" },
                { "label": "Best Sellers", "value": "bestseller" },
                { "label": "Hot Products", "value": "hot"}
            ], 
           "default": "bestseller"
        }
    ],
    "presets": [
        {
            "name":"Clerk Home",
            "settings": {
                "recommendation_type": "bestseller"
            }
        }
    ],
}
{% endschema %}