{% comment %}
{% liquid
  assign per_row = section.settings.per_row
  assign per_page = section.settings.per_page
  assign show_sort = section.settings.show_sort
  assign show_filter = section.settings.show_filter
  assign show_sidebar = false
  
  if show_sort or show_filter
    assign show_sidebar = true
  endif


%}




<section
  class="
    collection-intro
    s-inline-section
    {% if full_width %}full-width{% endif %}
  "
  data-section-id="{{ section.id }}"
  data-section-type="collection-intro"
  style="
    --image-position: {{ section.settings.image_position }};display:none
  "
 >
  {% if search.performed %}
    <h1 class="page__heading ff-heading fs-heading-base">{{ 'search.results_with_count' | t: terms: search.terms, count: search.results_count }}</h1>
  {% else %}
    <h1 class="page__heading ff-heading fs-heading-base">{{ 'search.title' | t }}</h1>
  {% endif %}

  <form action="{{ routes.search_url }}" class="search__form" method="get" role="search">
    <input
      type="search"
      name="q"
      id="Search"
      class="input input--round"
      value="{{ search.terms | escape }}"
      placeholder="{{ 'search.placeholder' | t }}"
      autocomplete="off"
    >
    <button type="submit" class="search__submit" title="Submit">
      {% render 'icon-button' with icon: 'search' %}
    </button>
  </form>
</section>


{% paginate search.results by per_page %}

  <section
    class="search"
    data-section-id="{{ section.id }}"
    data-section-type="search"
  >
    {% if search.performed %}
      <div class="collection__loading" data-js-loading>
        {% render 'loader' %}
      </div>
      
      <div class="search-results-wrapper">
        
        {%- if show_sidebar and search.results_count > 0 -%}
          <div class="collection__sidebar" data-js-sidebar>
            <a href="#products" class="skip-to-content-button">
              {{ 'general.accessibility.skip_to_content' | t }}
            </a>
            {% render 'collection-sidebar' with
              results: search,
              show_sort: show_sort
              show_filter: show_filter
            %}
          </div>
        {%- endif -%}

        <div class="search__main-area">
          {% if search.results_count == 0 %}
            <p class="search__no-results ff-body fs-primary-body ta-c">{{ 'search.no_results' | t }}</p>

          {% else %}
            <h2 class="visually-hidden">{{ 'search.heading' | t: count: search.results_count }}</h2>


            {%- if show_sidebar -%}
              {% render 'mobile-filters' with
                results: search,
                show_sort: show_sort
                show_filter: show_filter
              %}
            {%- endif -%}

            <div id="root" class="collection__main" data-js-partial>
              {% render 'collection-top-bar' with
                results: search 
              %}
              
              <div class="results_grid grid">
                {% for item in search.results %}
                  <div class="grid__item grid__item--{{ per_row }} animate animate-up">
            
                    {%- if item.object_type == 'product' -%}
                      {% render 'product-item' with
                        product: item,
                        aspect_ratio: section.settings.aspect_ratio,
                      %}
                    {%- else -%}
                      {% render 'search-result-item' with
                        item: item,
                        aspect_ratio: section.settings.aspect_ratio,
                      %}
                    {%- endif -%}
                  </div>
                {% endfor %}
              </div>

              <div class="collection__pagination">
                {% render 'pagination' with paginate: paginate %}
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    {% endif %}

    {% render 'mobile-filtering-modal' with
      results: search,
      show_sort: section.settings.show_sort,
      show_filter: section.settings.show_filter
    %}
  </section>
{% endpaginate %}

{% schema %}
  {
    "name": "t:sections.main_search.name",
    "settings": [
      {
        "id": "show_filter",
        "type": "checkbox",
        "label": "t:sections.main_search.settings.show_filter.label",
        "default": true,
        "info": "t:sections.main_search.settings.show_filter.info"
      },
      {
        "id": "show_sort",
        "type": "checkbox",
        "label": "t:sections.main_search.settings.show_sort.label",
        "default": true
      },
      {
        "id": "per_row",
        "type": "range",
        "label": "t:sections.main_collection_grid.settings.per_row.label",
        "default": 3,
        "min": 2,
        "max": 4,
        "step": 1
      },
      {
        "id": "per_page",
        "type": "range",
        "label": "t:sections.main_collection_grid.settings.per_page.label",
        "default": 12,
        "min": 2,
        "max": 24,
        "step": 1
      },
      {
        "id": "aspect_ratio",
        "type": "select",
        "label": "t:shared.aspect_ratio.label",
        "options": [
          { "label": "t:shared.aspect_ratio.options.natural", "value": "natural" },
          { "label": "t:shared.aspect_ratio.options.square", "value": "square" },
          { "label": "t:shared.aspect_ratio.options.landscape", "value": "landscape" },
          { "label": "t:shared.aspect_ratio.options.portrait", "value": "portrait" }
        ],
        "default": "square"
      }
    ]
  }
{% endschema %}
<div class="page-width clerk-page-width">
  <span
      id="clerk-search"
      class="clerk"
      data-template="@search-page"
      data-target="#clerk-search-results"
      data-query="{{ search.terms }}"
      data-facets-attributes='["price","categories","vendor"]'
      data-facets-titles='{"price":"Price","categories":"Categories","vendor":"Brand"}'
      data-facets-target="#clerk-search-filters"
      data-facets-price-prepend="â‚¬"
      data-facets-in-url="false"
      data-facets-view-more-text="View More"
      data-facets-searchbox-text="Search for "> 
  </span>

  <div id="clerk-show-facets" onclick="toggleFacets()">Filters</div>

  <div class="clerk_flex_wrap">
    <div id="clerk-facets-container">
      <div id="clerk-search-filters"></div>
    </div>
    <div id="clerk-search-results"></div>
  </div>

  <script>
    function toggleFacets(){
      el = document.getElementById('clerk-facets-container');
      el.classList.toggle('active');
    }
  </script>


  <style>
    #clerk-show-facets {
        width: 70%; 
        height: 40px;
        margin: 20px auto; 
        background-color: #333;
        color: white;
        text-align: center;
        border-radius: 2px;
        line-height: 40px;
        cursor: pointer;
    }



    .clerk-page-width {
        display: flow-root;
    }

    #clerk-search-results {
        width: 80%;
      
    }
   

    #clerk-show-facets {
        display: none;
    }
    .clerk_flex_wrap {
        display: flex;
        flex-direction: row;
    }

    .active {
      display: block !important;
    }

    @media only screen and (max-width : 800px) {
      #clerk-search-filters {
        width: 100% !important;
      }

      #clerk-facets-container {
        display: none;
      }
      #clerk-show-facets {
          display: block;
      }
      .clerk_flex_wrap {
        flex-direction: column;
      }
      #clerk-search-results {
          display: block;
          width: 100%;
      }
    }
  </style>
</div>

{%endcomment%}