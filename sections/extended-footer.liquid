{% liquid
	assign content = section.blocks
%}

{% schema %}
	{
		"name": "Extended Footer",
		"class": "extended-footer__parent",
		"max_blocks": 4,
		"blocks": [
			{
				"type": "text",
				"name": "Text",
				"settings": [
					{
						"id": "image",
						"type": "image_picker",
						"label": "Image"
					},
					{
						"id": "heading",
						"type": "text",
						"label": "Heading",
						"info": "Info",
						"default": "Om oss"
					},
					{
						"id": "subheading",
						"type": "richtext",
						"label": "Subheading",
						"default": "<p>Skriv tekst her</p>"
					},
					{
						"id": "link_text",
						"type": "text",
						"label": "CTA text"
					},
					{
						"id": "link",
						"type": "url",
						"label": "CTA link"
					}
				]
			}
		]
	}
{% endschema %}